SQLite'ı geri aktif et (şu anki kodu korur)spring.application.name=ContactsImporter

# CORS Configuration
spring.web.cors.allowed-origins=http://localhost:3000
spring.web.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
spring.web.cors.allowed-headers=*
spring.web.cors.allow-credentials=true

# Database Configuration
# Option 1: Use relative path (recommended for local development)
spring.datasource.url=jdbc:sqlite:../../../sqlitedb/importer.sqlite

# Option 2: Use absolute path (customize for your system)
# spring.datasource.url=jdbc:sqlite:/absolute/path/to/your/importer.sqlite

# Option 3: Use environment variable
# spring.datasource.url=jdbc:sqlite:${DB_PATH:/default/path/importer.sqlite}

spring.datasource.driver-class-name=org.sqlite.JDBC

spring.jpa.database-platform=org.sqlite.hibernate.dialect.SQLiteDialect
spring.jpa.show-sql=false
spring.jpa.open-in-view=false

spring.jpa.hibernate.ddl-auto=update

# Hibernate loglarını kapat
logging.level.org.hibernate.SQL=ERROR
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=ERROR 

